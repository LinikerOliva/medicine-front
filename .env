# API Configuration
VITE_MODE=development
VITE_API_URL=http://127.0.0.1:8000
VITE_API_BASE_PATH=/api
VITE_LOGIN_ENDPOINT=/auth/login/
VITE_AUTH_SCHEME=Token

# Authentication Endpoints
VITE_LOGIN_ENDPOINT=/auth/login/
VITE_REGISTER_ENDPOINT=/auth/register/
VITE_LOGOUT_ENDPOINT=/auth/logout/
VITE_REFRESH_TOKEN_ENDPOINT=/auth/token/refresh/

# Google OAuth (substitua pelo seu Client ID real)
VITE_GOOGLE_CLIENT_ID=SEU_CLIENT_ID_REAL.apps.googleusercontent.com
VITE_GOOGLE_LOGIN_ENDPOINT=/auth/google/

# User Profile Endpoints
VITE_USER_PROFILE_ENDPOINT=/users/
VITE_MEDICOS_ENDPOINT=/medicos/
VITE_PACIENTES_ENDPOINT=/pacientes/
VITE_CONSULTAS_ENDPOINT=/consultas/
VITE_PRONTUARIOS_ENDPOINT=/prontuarios/
VITE_EXAMES_ENDPOINT=/exames/
VITE_BUSCAR_PACIENTES_ENDPOINT=/buscar-pacientes/

# Feature flags / compat
# Desativa o uso de /pacientes/me/ por padrão (evita 500 quando o endpoint não existe)
VITE_PACIENTES_ME_ENABLED=false
# Desativa o filtro por usuário em /pacientes/?{key}= por padrão (evita 500)
VITE_PACIENTES_USER_FILTER_ENABLED=false
# Define chaves alternativas para filtrar paciente por usuário (caso seu backend use outro parâmetro)
VITE_PACIENTES_USER_FILTER_KEYS=user,usuario,user_id

# App Configuration
VITE_APP_NAME=Sistema Médico
VITE_APP_VERSION=1.0.0

# Development
VITE_DEBUG=true
# Solicitações - endpoints
VITE_SOLICITACOES_MEDICOS_ENDPOINT=/solicitacaomedico/
VITE_ADMIN_SOLICITACOES_ENDPOINT=/solicitacaomedico/
VITE_SOLICITACOES_ENDPOINT=/solicitacoes/

# Controle de logs e probing
VITE_API_VERBOSE_LOGS=false
VITE_VERBOSE_ENDPOINT_LOGS=false
VITE_DISABLE_ENDPOINT_PROBING=false

# Outros
VITE_DISABLE_SOLICITACAO_API=false

# Mocks de desenvolvimento
VITE_MOCK_RECEITA=false
VITE_MOCK_MEDICO_CERTIFICADO=false
