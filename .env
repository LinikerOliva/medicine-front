# Feature flags / compat
# Habilita o uso de /pacientes/me/ para carregamento correto dos dados do paciente
VITE_PACIENTES_ME_ENABLED=true
# Habilita o filtro por usuário em /pacientes/?{key}= para carregamento correto
VITE_PACIENTES_USER_FILTER_ENABLED=true
# Define chaves alternativas para filtrar paciente por usuário (caso seu backend use outro parâmetro)
VITE_PACIENTES_USER_FILTER_KEYS=user,usuario,user_id

# App Configuration
VITE_APP_NAME=Sistema Médico
VITE_APP_VERSION=1.0.0

# Development
VITE_DEBUG=true
VITE_USE_PROXY=true
# Solicitações - endpoints
VITE_SOLICITACOES_MEDICOS_ENDPOINT=/api/solicitacaomedico/
VITE_ADMIN_SOLICITACOES_ENDPOINT=/api/solicitacaomedico/
VITE_SOLICITACOES_ENDPOINT=/api/solicitacoes/

# Controle de logs e probing
VITE_API_VERBOSE_LOGS=true
VITE_VERBOSE_ENDPOINT_LOGS=true
VITE_DISABLE_ENDPOINT_PROBING=false

# Outros
VITE_DISABLE_SOLICITACAO_API=false

# Mocks de desenvolvimento
VITE_MOCK_RECEITA=false
VITE_MOCK_MEDICO_CERTIFICADO=true
