VITE_LOGOUT_ENDPOINT=/api/auth/logout/
VITE_REFRESH_TOKEN_ENDPOINT=/api/auth/token/refresh/
VITE_FORGOT_PASSWORD_ENDPOINT=/api/password_reset/
VITE_RESET_PASSWORD_CONFIRM_API=/api/auth/password_reset_confirm/
VITE_MAIL_SENDER=liniker.rafael00@gmail.com

# Google OAuth (substitua pelo seu Client ID real)
VITE_GOOGLE_CLIENT_ID=SEU_CLIENT_ID_REAL.apps.googleusercontent.com
