{
  "version": 2,
  "builds": [
    {
      "src": "medicine-front/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://tcc-back-ktwy.onrender.com/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
